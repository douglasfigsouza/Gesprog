@model Gesprog.Models.PROGRAMADORES
@{
    ViewBag.Title = "Cadastro de Programador";
}
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                {
                    <fieldset>
                        <legend>Cadastrar</legend>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(p => p.NOME_PROG, new { @class = "control-label col-md-12" })
                            @Html.TextBoxFor(p => p.NOME_PROG, new { @class = "form-control col-md-12", ng_model = "programador.nome" })
                            @Html.ValidationMessageFor(p => p.NOME_PROG)
                        </div>
                        <div class="form-group col-md-6">
                            @Html.Label("Estados", new { @class = "control-label col-md-12" })
                            @Html.DropDownList("EstadoId", new SelectList(@ViewBag.Estados, "ESTADOID", "SIGLA"), "Selecione", new { @class = "form-control col-md-12", ng_model = "programador.Estados", ng_change = "getCities(programador.Estados)" })
                        </div>
                        <div class="form-group col-md-6" ng-show="programador.Estados">
                            @Html.Label("Cidades", new { @class = "control-label col-md-12" })
                            <select ng-options="item.NOME for item in cities" ng-model="programador.Cidade" ng-change="programador.Cidadeid=programador.Cidade.CIDADEID" class="form-control col-md-12">
                                <option value="">Selecione</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.EMAIL_PROG, new { @class = "col-md-12 control-label" })
                            @Html.TextBoxFor(m => m.EMAIL_PROG, new { @class = "form-control col-md-12", @ng_model = "programador.Email", @placeholder = "Seu Email", ng_required = "Email" })
                            @Html.ValidationMessageFor(m => m.EMAIL_PROG)
                        </div>
                        @Html.DisplayFor(m => m.CIDADEID, new { ng_model = "programador.Cidadeid" })
                    </fieldset>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Adicioanar</button>
                    </div>
                }
            }
        </div>
    </div>
    {{programador.Estados}}
