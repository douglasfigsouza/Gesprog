@model Gesprog.Models.PROGRAMADORES
@{
    ViewBag.Title = "Cadastro de Programador";
}
<div class="row">
    <div class="col-md-6 form">
        @using (Html.BeginForm())
            {
            @Html.ValidationSummary(true)
            {
                <h3>Insira Aqui suas informações.</h3>
                    <div ng-init="pag=1" ng-show="pag==1">
                        <fieldset>
                            <legend>Dados Pessoais</legend>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(p => p.NOME_PROG, new { @class = "control-label col-md-12" })
                                @Html.TextBoxFor(p => p.NOME_PROG, new { @class = "form-control col-md-12", ng_model = "programador.nome" })
                                @Html.ValidationMessageFor(p => p.NOME_PROG)
                            </div>
                            <div class="form-group col-md-6">
                                @Html.Label("Estados", new { @class = "control-label col-md-12" })
                                @Html.DropDownList("EstadoId", new SelectList(@ViewBag.Estados, "ESTADOID", "SIGLA"), "Selecione", new { @class = "form-control col-md-12", ng_model = "programador.Estados", ng_change = "getCities(programador.Estados)" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.Label("Cidades", new { @class = "control-label col-md-12" })
                                <select ng-disabled="!programador.Estados" ng-options="item.NOME for item in cities" ng-model="programador.Cidade" ng-change="programador.Cidadeid=programador.Cidade.CIDADEID" class="form-control col-md-12">
                                    <option value="">Selecione</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(p => p.EMAIL_PROG, new { @class = "col-md-12 control-label" })
                                @Html.TextBoxFor(p => p.EMAIL_PROG, new { @class = "form-control col-md-12", @ng_model = "programador.Email", ng_required = "Email" })
                                @Html.ValidationMessageFor(p => p.EMAIL_PROG)
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(p => p.FONE_PROG, new { @class = "col-md-12 control-label" })
                                @Html.TextBoxFor(p => p.FONE_PROG, new { @class = "form-control col-md-12", @ng_model = "programador.Fone", ng_required = "Email" })
                                @Html.ValidationMessageFor(p => p.FONE_PROG)
                            </div>
                            @Html.DisplayFor(m => m.CIDADEID, new { ng_model = "programador.Cidadeid" })
               
                        </fieldset>
                        <fieldset>
                            <legend>Social</legend>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(p => p.SKYPE_PROG, new { @class = "col-md-12 control-label" })
                                @Html.TextBoxFor(p => p.SKYPE_PROG, new { @class = "form-control col-md-12", @ng_model = "programador.Skype", ng_required = "Email" })
                                @Html.ValidationMessageFor(p => p.SKYPE_PROG)
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(p => p.LINKEDIN_PROG, new { @class = "col-md-12 control-label" })
                                @Html.TextBoxFor(p => p.LINKEDIN_PROG, new { @class = "form-control col-md-12", @ng_model = "programador.Linkedin", ng_required = "Email" })
                                @Html.ValidationMessageFor(p => p.LINKEDIN_PROG)
                            </div>
                            <span class="col-md-12 pagination">1/4</span>
                            <div class="form-group col-md-6 pull-right">
                                <button ng-click="pag=2" ng-class="{'active' : pag==2}" class="btn btn-success btn-block" type="button">Avançar</button>
                            </div>
                        </fieldset>
                    </div>


                    <div ng-show="pag==2">
                        <fieldset>
                            <legend>Profisional</legend>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(p => p.PORTIFOLIO_PROG, new { @class = "col-md-12 control-label" })
                                @Html.TextBoxFor(p => p.PORTIFOLIO_PROG, new { @class = "form-control col-md-12", @ng_model = "programador.Portifolio", ng_required = "Email" })
                                @Html.ValidationMessageFor(p => p.PORTIFOLIO_PROG)
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(p => p.PRETSAL_PROG, new { @class = "col-md-12 control-label" })
                                @Html.TextBoxFor(p => p.PRETSAL_PROG, new { @class = "form-control col-md-12", @ng_model = "programador.Pretencaosal", ng_required = "Email" })
                                @Html.ValidationMessageFor(p => p.PRETSAL_PROG)
                            </div>
                            {{programador.DISPHRTRDIA_PROG}}
                            <h3>What is your willingness to work today? / Qual é sua disponibilidade para trabalhar hoje? *</h3>
                            <div class="col-md-12 form-group">
                                <input type="radio" ng-model="programador.Disponibilidade"class="col-md-1 radio-inline" value="Up to 4 hours per day / Até 4 horas por dia" ng-click="SetDisponibilidade(programador.Disponibilidade);" />
                                <label class="col-md-11 control-label">Up to 4 hours per day / Até 4 horas por dia</label>
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="radio" ng-model="programador.Disponibilidade"  class="col-md-1 radio-inline" value="4 to 6 hours per day / De 4 á 6 horas por dia" ng-click="SetDisponibilidade(programador.Disponibilidade);" />
                                <label class="col-md-11 control-label">4 to 6 hours per day / De 4 á 6 horas por dia</label>
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="radio" ng-model="programador.Disponibilidade" class="col-md-1 radio-inline" value="6 to 8 hours per day /De 6 á 8 horas por dia" ng-click="SetDisponibilidade(programador.Disponibilidade);" />
                                <label class="col-md-11 control-label">6 to 8 hours per day /De 6 á 8 horas por dia</label>
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="radio" ng-model="programador.Disponibilidade" class="col-md-1 radio-inline" value="Up to 8 hours a day (are you sure?) / Acima de 8 horas por dia (tem certeza?)" ng-click="SetDisponibilidade(programador.Disponibilidade);" />
                                <label class="col-md-11 control-label">Up to 8 hours a day (are you sure?) / Acima de 8 horas por dia (tem certeza?)</label>
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="radio" ng-model="programador.Disponibilidade" class="col-md-1 radio-inline" value="Only weekends / Apenas finais de semana" ng-click="SetDisponibilidade(programador.Disponibilidade);" />
                                <label class="col-md-11 control-label">Only weekends / Apenas finais de semana</label>
                            </div>
                            @Html.DisplayFor(p=> p.DISPHRTRDIA_PROG, new { ng_model = "programador.DISPHRTRDIA_PROG" })
                            <h3>What's the best time to work for you? / Pra você qual é o melhor horário para trabalhar? *</h3>
                            <div ng-repeat="item in ListHorarios">
                                <input class="col-md-1" id="{{item.ID_HR}}" type="checkbox"ng-model="HorariosSelecionados" name="HorariosSelecionados" value="{{item.ID_HR}}" ng-checked="selection.indexOf(item.ID_HR) > -1" ng-click="toggleSelection(item.ID_HR)" />
                                <label class="col-md-11">{{item.DESC_HR}}</label>
                            </div>
                            <span class="col-md-12 pagination">2/4</span>
                            <div class="form-group col-md-6 pull-left">
                                <button ng-click="pag=1" ng-class="{'active' : pag==1}" class="btn btn-danger btn-block" type="button">Voltar</button>
                            </div>
                            <div class="form-group col-md-6 pull-right">
                                <button ng-click="pag=3" ng-class="{'active' : pag==3}" class="btn btn-success btn-block" type="button">Avançar</button>
                            </div>
                        </fieldset>
                    </div>

                    <div ng-show="pag==3">
                        <fieldset>
                            <legend>Dados Bancários</legend>
                            <div class="col-md-6 form-group">
                                <label class="control-label col-md-12">Banco:</label>
                                <input type="text" ng-model="programador.Banco"name="programador.Banco" class="col-md-12 form-control"/>
                            </div>
                            <div class="col-md-6 form-group">
                                @Html.LabelFor(P=>P.CPF_PROG, new {@class="control-label col-md-12"})
                                @Html.TextBoxFor(p=>p.CPF_PROG, new { @class="form-control col-md-12 ", ng_model="programador.CPF_PROG"})
                            </div>

                            <div class="form-group col-md-6 pull-left">
                                <button ng-click="pag=2" ng-class="{'active' : pag==2}" class="btn btn-danger btn-block" type="button">Voltar</button>
                            </div>
                        </fieldset>
                    </div>
            }
        }
    </div>
</div>